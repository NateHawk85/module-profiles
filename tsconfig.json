{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"DOM",
			"ES2020"
		],
		"types": [
			"@league-of-foundry-developers/foundry-vtt-types/index-lenient",
			"@types/jest"
		],
		"strict": true,
		"baseUrl": "src",
		"module": "ES2020",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	}
}
