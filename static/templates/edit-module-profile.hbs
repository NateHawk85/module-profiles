<form id="module-profiles-view-profile-modules-form">
	<!------------------------------ Header ------------------------------>
	<h2 class="module-profiles-header">{{name}}</h2>
	<label for="moduleProfilesEditProfileName">{{localize 'FORM_APPLICATION.header.profileName'}}</label>
	<input id="moduleProfilesEditProfileName" name="moduleProfilesEditProfileName" type="text" value="{{name}}" />
	<label for="moduleProfilesEditProfileDescription">{{localize 'FORM_APPLICATION.header.profileDescription'}}</label>
	<input id="moduleProfilesEditProfileDescription" name="moduleProfilesEditProfileDescription" type="text" value="{{description}}" />
	<!------------------------------ Content ------------------------------>
	<ul>
		{{#each modules}}
			<li class="flexrow">
				<label for="isModuleActiveCheckbox-{{id}}">
					<input name="{{id}}" id="isModuleActiveCheckbox-{{id}}" type="checkbox" {{#if isActive}}checked{{/if}}>
					{{title}}
				</label>
			</li>
			<br />
		{{/each}}
	</ul>
	<!------------------------------ Footer ------------------------------>
	<hr>
	<div class="flexrow">
		<button type="submit" name="submit" id="moduleProfilesEditProfileSubmit">
			<i class="fa fa-check"></i> {{localize 'FORM_APPLICATION.edit.submit'}}
		</button>
		<button type="submit" name="moduleProfilesCancel" id="moduleProfilesCancel">
			<i class="fa fa-ban"></i> {{localize 'FORM_APPLICATION.button.cancel'}}
		</button>
	</div>
</form>
