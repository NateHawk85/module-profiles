{
    "name": "module-profiles",
    "version": "v1.0.8",
    "description": "A module for FoundryVTT that allows for swapping between multiple customizable module profiles.",
    "main": "scripts/module-profiles.js",
    "scripts": {
        "test": "jest",
        "start": "webpack serve --hot",
        "build": "webpack",
